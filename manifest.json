{
    "manifest_version": 3,
    "name": "GPT Prompt Manager",
    "version": "1.0",
    "description": "An extension to store and manage GPT prompts.",
    "permissions": ["contextMenus", "storage", "clipboardWrite"],
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ],
    "action": {
      "default_title": "Open GPT Prompt Manager",
      "default_popup": "popup.html"
    },
    "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }
  